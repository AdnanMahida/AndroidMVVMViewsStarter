<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.StarterTemplate" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:colorBackground">#FBF7F0</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.StarterTemplate" parent="Base.Theme.StarterTemplate" />


    <style name="FullScreenDialogStyle" parent="@style/Base.Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/semi_transparent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="fontPaddingStyle">
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Ubuntu fonts -->
    <style name="FontBold" parent="fontPaddingStyle">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="FontLight" parent="fontPaddingStyle">
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="FontRegular" parent="fontPaddingStyle">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="FontMedium" parent="fontPaddingStyle">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="CustomMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">@dimen/_23sdp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="backgroundTint">@color/material_dynamic_primary0</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <style name="CustomProgressBarTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--Default Edit Text Style-->
    <style name="BaseEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:drawablePadding">@dimen/_6sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/_40sdp</item>
    </style>

    <style name="EditTextStyle" parent="BaseEditTextStyle">
        <item name="cornerRadius">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_round_white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>